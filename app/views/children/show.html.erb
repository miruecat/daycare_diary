              </button>
            </div>
            <div class="modal-body">
              <%= simple_form_for @activity do |f| %>
                <%= f.input :children_id, as: :hidden, input_html: { value: [@child.id] }   %>
                <%= f.input :category, input_html: { hidden: true, value: "moment" } %>
                <%= f.input :sub_category, input_html: { hidden: true, value: "photo" } %>
                <%= f.input :time %>
                <%= f.input :date %>
                <%= f.input :comment %>
                <%= f.button :submit %>
              <% end %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save the Moment</button>
